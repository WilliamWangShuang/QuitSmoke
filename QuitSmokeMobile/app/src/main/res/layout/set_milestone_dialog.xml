<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pic"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSetMilestoneTargetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/supporter_set_milestone_title"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/txtSetMilestoneTarget"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_style"
        android:gravity="top"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleX="1"
        android:scaleY="1"
        android:selectAllOnFocus="true"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvSetRewardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/reward_title"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/txtSetReward"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_style"
        android:gravity="top"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleX="1"
        android:scaleY="1"
        android:selectAllOnFocus="true" />

</LinearLayout>