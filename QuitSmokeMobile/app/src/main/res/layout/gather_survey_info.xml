<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_pic">



    <TextView
        android:id="@+id/lblErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CB4335"
        android:textStyle="bold"
        android:paddingLeft="10dp"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">





        <TableRow
            android:gravity="center_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/lblAppName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:color="#FF2345"
                android:fontFamily="@font/nanum_brush_script"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="50dp"
                android:text="@string/quit_together"
                android:textSize="300px" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/how_many_cigarettes_do_you_smoke_a_day" />
    <EditText
        android:id="@+id/survey_smoke_per_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:inputType="number"
        android:hint="@string/smoke_per_day" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/what_is_your_age" />
    <Spinner
        android:id="@+id/survey_age"
        android:dropDownWidth="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="What is your gender?" />
    <Spinner
        android:id="@+id/survey_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_servey_next"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonforall"
        android:text="@string/next" />

    <TextView
        android:id="@+id/main_page_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:text="@string/sign_in"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        android:textSize="15dp" />

</LinearLayout>
