<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_pict"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvFRSDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/frs_desc"
        app:layout_constraintBottom_toTopOf="@+id/tvRiskResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/table_calculate_frs"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRiskResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="0.0%"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/table_calculate_frs" />

    <TableLayout
        android:id="@+id/table_calculate_frs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvRiskResult"
        tools:layout_editor_absoluteY="149dp">

        <TableRow>

            <TextView
                android:id="@+id/tvChol"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:clickable="true"
                android:gravity="end"
                android:paddingRight="20dp"
                android:text="@string/tvChol_title"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtChol"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:background="@drawable/edit_text_style"
                android:hint="@string/txtChol_hint"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lblCholMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/lbl_chol_msg"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvSBP"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="end"
                android:paddingRight="20dp"
                android:text="@string/tvSBP_title"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtSBP"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:background="@drawable/edit_text_style"
                android:hint="@string/txtSBP_hint"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lbSBPMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/lbl_SBP_msg"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvHDL"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="end"
                android:paddingRight="20dp"
                android:text="@string/tvHDL_title"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtHDL"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:background="@drawable/edit_text_style"
                android:hint="@string/txtHDL_hint"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lbHDLMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/lbl_HDL_msg"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_span="2"
            android:gravity="center"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/btnCalculateFrs"
                android:layout_width="wrap_content"
                android:text="Done"
                android:theme="@style/AppTheme.Button" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>