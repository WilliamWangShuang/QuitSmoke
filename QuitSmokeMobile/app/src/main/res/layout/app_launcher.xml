<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_pic" >

    <TextView
        android:id="@+id/lblErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CB4335"
        android:textStyle="bold"
        android:paddingLeft="10dp"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:background="#FFFFFF"
            android:gravity="center">

            <ImageView
                android:layout_height="199dp"
                android:contentDescription="@string/launch_logo"
                android:src="@drawable/launch_logo" />
        </TableRow>

        <TableRow
            android:gravity="center_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/lblAppName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:color="#FF2345"
                android:fontFamily="@font/nanum_brush_script"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/quit_together"
                android:textSize="180px" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:inputType="textEmailAddress"
        android:hint="Email" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        app:passwordToggleEnabled="true"
        app:hintEnabled="true"
        android:textColorHint="@color/grey"
        android:hint="@string/login_pwd_hint"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/registerLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Do not have an account? Register now!"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#0D47A1"/>

</LinearLayout>
