<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_pic" >

    <TextView
        android:id="@+id/lblErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CB4335"
        android:textStyle="bold"
        android:paddingLeft="10dp"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">



        <TableRow
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/lblAppName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:color="#FF2345"

                android:fontFamily="@font/nanum_brush_script"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="100dp"
                android:text="@string/quit_together"
                android:textSize="300px" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_style"
        android:hint="Email" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true"
        app:hintEnabled="true"
        android:textColorHint="@color/grey"
        android:hint="@string/login_pwd_hint"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:background="@drawable/edit_text_style"
            android:layout_gravity="center"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"

        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/buttonforwhitebg"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/registerLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Do not have an account? Register now!"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#0D47A1"/>

</LinearLayout>
