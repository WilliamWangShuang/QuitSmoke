<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="18dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="18dp"
    android:layout_marginLeft="13dp"
    android:orientation="vertical">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvStatusSupporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitter Plan(s)"
            android:textColor="#090909"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTutorial"
            android:layout_width="19.5dp"
            android:layout_height="19.5dp"
            android:background="@drawable/ic_info_outline_light_blue_a700_18dp"
            android:gravity="center"
            android:paddingRight="2dp"
            android:textColor="#181717"
            android:textSize="18sp"
            android:clickable="true"
            android:textStyle="bold" />

    </TableRow>

    <TextView
        android:id="@+id/tvTapRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_value_pending"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pending_plan"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:background="@drawable/add_depth"/>
</LinearLayout>